{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jsume.moo.zone/data/skills.schema.json",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "e.g. JavaScript"
      },
      "keywords": {
        "type": "array",
        "description": "Specify multiple keywords that are related to this skill",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "description": "e.g. React, Node.js, Express"
        }
      }
    },
    "required": [
      "name",
      "keywords"
    ]
  }
}
