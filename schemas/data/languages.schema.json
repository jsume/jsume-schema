{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jsume.moo.zone/data/languages.schema.json",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "language": {
        "type": "string",
        "description": "e.g. English"
      },
      "fluency": {
        "description": "Describe your fluency level in this language, for reference see https://anglo-link.com/level/",
        "enum": [
          "Beginner",
          "Enlementary",
          "Intermediate",
          "Advanced",
          "Fluent",
          "Proficient",
          "Native"
        ]
      }
    },
    "required": [
      "language",
      "fluency"
    ]
  }
}
